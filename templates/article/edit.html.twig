{% extends 'base.html.twig' %}

{% block title %}Modifier l'Article{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-2xl font-semibold my-4">Modifier l'Article</h1>

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name, 'Nom de l\'article', { 'class': 'block text-lg font-medium text-gray-700' }) }}
            {{ form_widget(form.name, { 'attr': {'class': 'mt-1 p-2 border border-gray-300 rounded-md w-full'} }) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.description, 'Description', { 'class': 'block text-lg font-medium text-gray-700' }) }}
            {{ form_widget(form.description, { 'attr': {'class': 'mt-1 p-2 border border-gray-300 rounded-md w-full'} }) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.price, 'Prix', { 'class': 'block text-lg font-medium text-gray-700' }) }}
            {{ form_widget(form.price, { 'attr': {'class': 'mt-1 p-2 border border-gray-300 rounded-md w-full'} }) }}
        </div>

        <button type="submit" class="mt-4 px-6 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-400 focus:outline-none">Modifier</button>
    {{ form_end(form) }}

    <a href="{{ path('app_articles_index') }}" class="mt-3 inline-block px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-400 focus:outline-none">Retour</a>
</div>
{% include 'components/footer.html.twig' %}
{% endblock %}
