{% extends 'base.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">{{ article.name }}</h1>
    <p>{{ article.description }}</p>
    <p><strong>Prix :</strong> {{ article.price }} €</p>

    <a href="{{ path('app_articles_index') }}" class="btn btn-secondary">Retour</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_articles_edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
        <form action="{{ path('app_articles_delete', {'id': article.id}) }}" method="post" style="display:inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
    {% endif %}
</div>
{% endblock %}
