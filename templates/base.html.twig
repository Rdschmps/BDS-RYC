<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg"/>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-gray-100">

        {% include 'components/header.html.twig' %}

        {% block body %}
        <div class="flex">
            <section id="Image-Container" class="flex">
                <img id="image1" src="" alt="Image 1" class="w-1/2 h-auto">
                <img id="image2" src="" alt="Image 2" class="w-1/2 h-auto">
            </section>
            <section>

            </section>
        </div>

        {% include 'components/footer.html.twig' %}
        {% endblock %}
    </body>

     <script>
            function setImageSize() {
                const screenWidth = window.innerWidth; 
                const halfScreenWidth = screenWidth / 2;  
                const fixedHeight = 800; 

                const imageUrl1 = `https://picsum.photos/${halfScreenWidth}/${fixedHeight}`;
                const imageUrl2 = `https://picsum.photos/${halfScreenWidth}/${fixedHeight}`;

                document.getElementById("image1").src = imageUrl1;
                document.getElementById("image2").src = imageUrl2;
            }

            window.onload = setImageSize;

            window.onresize = setImageSize;
        </script>
        
    
</html>
