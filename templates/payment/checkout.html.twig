    document.getElementById("billingForm").addEventListener("submit", function (event) {
        event.preventDefault(); // EmpÃªche l'envoi normal du formulaire
        
        let form = new FormData(this);

        // Envoie les donnÃ©es Ã  la route 'checkout-session' pour crÃ©er une session de paiement
        fetch("{{ path('checkout-session') }}", {
            method: "POST", 
            body: form // Envoie les mÃªmes donnÃ©es du formulaire dans la requÃªte
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                // GÃ©rer l'erreur, afficher un message Ã  l'utilisateur
                console.error(data.error);
