{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container mx-auto max-w-4xl px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">üõçÔ∏è Mon Panier</h1>

    {% if products is empty %}
        <div class="text-center bg-gray-100 p-6 rounded-lg shadow-md">
            <p class="text-lg text-gray-700">Votre panier est vide.</p>
            <a href="{{ path('home') }}" 
               class="mt-4 inline-block bg-indigo-600 text-black px-6 py-3 rounded-lg font-semibold shadow-md hover:bg-indigo-700 transition">
                üõí Retour √† la boutique
            </a>
        </div>
    {% else %}
        <div class="overflow-x-auto">
            <table class="w-full bg-white shadow-md rounded-lg overflow-hidden">
                <thead class="bg-indigo-600 text-white">
                    <tr>
                        <th class="py-3 px-4 text-left">Image</th>
                        <th class="py-3 px-4 text-left">Produit</th>
                        <th class="py-3 px-4 text-center">Prix</th>
                        <th class="py-3 px-4 text-center">Quantit√©</th>
                        <th class="py-3 px-4 text-center">Sous-total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in products %}
                        <tr class="border-b">
                            <td class="py-3 px-4">
                                <img src="{{ article.imageUrl ?: asset('asset/default-image.jpg') }}" 
             alt="{{ article.name }}" 
             class="w-full h-64 object-cover rounded-lg shadow-md"
             onerror="this.src='{{ asset('asset/default-image.jpg') }}'"/>
                            </td>
                            <td class="py-3 px-4">{{ item.product.name }}</td>
                            <td class="py-3 px-4 text-center">{{ item.product.price / 100 }} ‚Ç¨</td>
                            <td class="py-3 px-4 text-center">{{ item.quantity }}</td>
                            <td class="py-3 px-4 text-center font-semibold">{{ item.subtotal / 100 }} ‚Ç¨</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Total et bouton de validation -->
        <div class="mt-6 text-right">
            <h3 class="text-2xl font-bold text-gray-900">Total : <span class="text-indigo-600">{{ total / 100 }} ‚Ç¨</span></h3>
            <a href="{{ path('checkout_page') }}" 
               class="mt-4 inline-block bg-green-600 text-black px-6 py-3 rounded-lg font-semibold shadow-md hover:bg-green-700 transition">
                ‚úÖ Valider le panier et payer
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
