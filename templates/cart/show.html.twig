{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>{{ cart.items ? cart.items|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ cart.status }}</td>
            </tr>
            <tr>
                <th>Total_price</th>
                <td>{{ cart.totalPrice }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ cart.createdAt ? cart.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cart_index') }}">back to list</a>

    <a href="{{ path('app_cart_edit', {'id': cart.id}) }}">edit</a>

    {{ include('cart/_delete_form.html.twig') }}
{% endblock %}
