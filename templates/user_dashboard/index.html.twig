{% extends 'base.html.twig' %}

{% block title %}Espace Utilisateur{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
            <h1 class="text-2xl font-semibold text-gray-800 text-center mb-6">Bienvenue sur votre espace utilisateur !</h1>

            <div class="border rounded-lg p-4 shadow-md bg-gray-50 mb-6">
                <h3 class="text-lg font-medium text-gray-700">Bienvenue, {{ app.user.userIdentifier }}</h3>
                <p class="text-gray-600 mt-2"><strong>Email :</strong>  {{ app.user.email }}</p>
               <p class="text-gray-600"><strong>Solde :</strong> 
                    <span class="font-semibold text-green-500">{{ app.user.balance }} €</span>
                </p>
            </div>

            <a href="{{ path('app_logout') }}" 
               class="block w-full text-center bg-[#9d030d] hover:bg-[#7a020a] text-white font-bold py-2 px-4 rounded-lg mt-6 transition duration-300">
                Se déconnecter
            </a>
        </div>
    </div>
{% endblock %}
